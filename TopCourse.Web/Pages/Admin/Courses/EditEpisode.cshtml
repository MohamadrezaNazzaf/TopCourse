@page "{id}"
@model TopCourse.Web.Pages.Admin.Courses.EditEpisodeModel
@{
    ViewData["Title"] = "ویرایش جلسه";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">ویرایش جلسه - @ViewData["EpisodeName"]</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>


<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CourseEpisode.CourseId" />
    <input type="hidden" asp-for="CourseEpisode.EpisodeFileName" />
    <input type="hidden" asp-for="CourseEpisode.EpisodeId" />
    <div class="row">

        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    اطلاعات جلسه - @ViewData["EpisodeName"]
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-7">
                                <h5>عنوان جلسه</h5>
                                <input type="text" asp-for="CourseEpisode.EpisodeTitle" class="form-control" placeholder="عنوان جلسه را وارد کنید">
                                <span asp-validation-for="CourseEpisode.EpisodeTitle"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <h5>مدت زمان جلسه</h5>
                                <input type="text" asp-for="CourseEpisode.EpisodeTime" class="form-control" placeholder="عنوان جلسه را وارد کنید">
                                <span asp-validation-for="CourseEpisode.EpisodeTime"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <h5>فایل</h5>
                        <input type="file" name="fileEpisode" class="btn btn-outline btn-info" />
                        <p class="text-warning">آپلود فایل اجباری است.</p>
                        @if (ViewData["IsExistFile"] != null)
                        {
                            <div class="alert alert-danger">
                                نام فایل معتبر نیست، لطفا تغییر دهید!
                            </div>
                        }
                        <span asp-validation-for="CourseEpisode.EpisodeFileName"></span>
                    </div>

                    <div class="form-group">
                        <label>دسترسی</label>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="CourseEpisode.IsFree" />
                                رایگان است
                            </label>
                        </div>
                    </div>

                    <p>
                        <input type="submit" value="ویرایش" class="btn btn-success btn-block btn-circle" />
                    </p>

                </div>
            </div>
        </div>
    </div>
</form>