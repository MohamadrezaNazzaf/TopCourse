@page "{id}"
@model TopCourse.Web.Pages.Admin.Courses.DeleteEpisodeModel
@{
    ViewData["Title"] = "حذف جلسه";
    Layout = null;
}


<div class="container alert alert-danger">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="episodeId" asp-for="@Model.CourseEpisode.EpisodeId" />
        <input type="hidden" name="courseId" asp-for="@Model.CourseEpisode.CourseId" />

        <h4 style="text-align:center">آیا از حذف جلسه '@Model.CourseEpisode.EpisodeTitle' مطمئن هستید؟</h4>
        <p style="text-align:center">


            <input type="submit" value="حذف جلسه" class="btn btn-danger" />
            <a asp-page="/Admin/Courses/IndexEpisode" asp-route-id="@Model.CourseEpisode.CourseId" class="btn btn-info">انصراف</a>

        </p>

    }
</div>