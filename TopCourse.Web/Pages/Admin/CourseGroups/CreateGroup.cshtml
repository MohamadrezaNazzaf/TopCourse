@page "{id?}"
@model TopCourse.Web.Pages.Admin.CourseGroups.CreateGroupModel
@{
    ViewData["Title"] = "CreateGroup";
}

<div class="row">
    <div class="col-lg-12">
        @if (Model.CourseGroup.ParentId == null)
        {
            <h3 class="page-header">افزودن گروه جدید</h3>
        }
        else
        {
            <h3 class="page-header">افزودن زیر گروه جدید برای ' @ViewData["groupTitle"] '</h3>
        }
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post">
        <input type="hidden" asp-for="CourseGroup.ParentId" />
        <div class="col-md-7 col-md-offset-2">
            <div class="panel panel-primary">
                @if (Model.CourseGroup.ParentId == null)
                {
                    <div class="panel-heading">
                        گروه جدید
                    </div>
                }
                else
                {
                    <div class="panel-heading">
                        زیر گروه جدید
                    </div>
                }
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        @if (Model.CourseGroup.ParentId == null)
                        {
                            <label>عنوان گروه</label>
                            <input type="text" asp-for="CourseGroup.GroupTitle" class="form-control" placeholder="عنوان گروه را وارد کنید">
                        }
                        else
                        {
                            <label>عنوان زیر گروه</label>
                            <input type="text" asp-for="CourseGroup.GroupTitle" class="form-control" placeholder="عنوان زیر گروه را وارد کنید">
                        }
                    </div>
                    <input type="submit" value="ذخیره" class="btn btn-success btn-block" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>

