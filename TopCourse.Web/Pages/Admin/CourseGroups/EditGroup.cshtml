@page "{id}"
@model TopCourse.Web.Pages.Admin.CourseGroups.EditGroupModel
@{
    ViewData["Title"] = "EditGroup";
}

<div class="row">
    <div class="col-lg-12">
        @if (Model.CourseGroup.ParentId == null)
        {
            <h3 class="page-header">ویرایش گروه</h3>
        }
        else
        {
            <h3 class="page-header">ویرایش زیر گروه</h3>
        }
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post">
        <input type="hidden" asp-for="CourseGroup.ParentId" />
        <input type="hidden" asp-for="CourseGroup.GroupId" />
        <div class="col-md-7 col-md-offset-2">
            <div class="panel panel-info">
                @if (Model.CourseGroup.ParentId == null)
                {
                    <div class="panel-heading">
                         گروه
                    </div>
                }
                else
                {
                    <div class="panel-heading">
                         زیر گروه
                    </div>
                }

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        @if (Model.CourseGroup.ParentId == null)
                        {
                            <label>عنوان گروه</label>
                            <input type="text" asp-for="CourseGroup.GroupTitle" class="form-control" placeholder="عنوان گروه را وارد کنید">
                        }
                        else
                        {
                            <label>عنوان زیر گروه</label>
                            <input type="text" asp-for="CourseGroup.GroupTitle" class="form-control" placeholder="عنوان زیر گروه را وارد کنید">
                        }
                    </div>
                    <input type="submit" value="ویرایش" class="btn btn-warning btn-block" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>